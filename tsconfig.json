{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2021",
		"module": "commonjs",
        "composite": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"skipDefaultLibCheck": true,
        "paths": {
          "@/*": ["./*"]
        }
    },
  "exclude": ["node_modules"],
  "include": [
      "**/*.ts",
      "**/*.d.ts",
      ".eslintrc.json",
      "artifacts/contracts/**/*.json",
    ]
}
